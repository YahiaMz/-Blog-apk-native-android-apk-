<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_enabled="true" >
     <shape android:shape="rectangle">
         <corners android:radius="13dp"></corners>
         <solid android:color="@color/edit_txt_Grey" />
         <padding android:right="10dp" android:left="10dp" android:top="15dp" android:bottom="15dp"></padding>
     </shape>
 </item>

    <item android:state_enabled="true" android:state_focused="true" >
        <shape android:shape="rectangle">
            <corners android:radius="13dp"></corners>
            <solid android:color="@color/transparent"></solid>
            <stroke android:color="@color/light_green" android:width="1.2dp"></stroke>
            <padding android:right="5dp" android:left="10dp" android:top="15dp" android:bottom="15dp"></padding> </shape>
    </item>

</selector>